INPUTS := $(wildcard *.md)
TARGETS := $(patsubst %.md,rendered/%.html,$(notdir $(INPUTS)))

all: $(TARGETS) rendered/res .gitignore

rendered/%.html: %.md | rendered
	@render $<

rendered:
	@mkdir -p rendered

rendered/res: | rendered
	@cp -r $(BIN_DIR)/kofi/assets/res rendered/res

.gitignore: $(BIN_DIR)/kofi/gitignore
	@cp $(BIN_DIR)/kofi/gitignore .gitignore

clean:
	@rm -rfd rendered/*

.PHONY: all clean
