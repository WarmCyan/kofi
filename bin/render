#!/bin/bash

filename=$1
outname=$(echo $filename | sed "s/\.md$/\.html/")

echo $outname

run-script $filename "content"
#refresh-expansions $filename
#refresh-links $filename # NOTE: breaks inbox (link counts disappear)
refresh-includes $filename

pandoc -i $filename -o rendered/$outname --lua-filter=$BIN_DIR/kofi/links-to-html.lua --template=$BIN_DIR/kofi/assets/template.html --filter pandoc-include
